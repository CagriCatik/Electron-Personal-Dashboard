{
  "name": "electron-personal-dashboard",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.7",
    "react": "^18.2.0",
    "react-calendar": "^5.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.5",
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "electron": "cross-env ELECTRON_DEV=1 electron .",
    "electron:prod": "npm run build && electron .",
    "build:electron": "npm run build && electron-builder",
    "ci": "npm run test && npm run build:electron"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@testing-library/jest-dom": "^5.17.0",
    "cross-env": "^7.0.3",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.yourcompany.myreactsidebar",
    "productName": "My React Sidebar",
    "directories": {
      "buildResources": "assets",
      "output": "release-builds"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
